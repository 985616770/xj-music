.detail-container {
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}
.detail-mask {
  position: absolute;
  width: 100%;
  height: 320rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-around;
  align-items: center;
}
.detail-img {
  width: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}
.detail {
  flex: 1;
  width: 0;
  color: #fff;
  line-height: 60rpx;
}
.detail-name {
  font-size: 30rpx;
  font-weight: 500;
}
