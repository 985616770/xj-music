.playlist-container {
  display: flex;
  flex-direction: column;
  position: relative;
}

.playlist-img {
  width: 100%;
  display: block;
  border-radius: 20rpx;
}

.playlist-playcount {
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  font-size: 20rpx;
  color: white;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.2);
  padding-left: 32rpx;
  background: url(data:image/svg+xml;base64,)
    no-repeat center left;
}

.playlist-name {
  font-size: 22rpx;
  line-height: 1.2;
  padding: 2rpx 0 0 6rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
