<view class="ctrl">
  <view class="ctrl-item" bind:tap="onComment">
    <i class="iconfont icon-comment icon"></i>
    <text>评论</text>
  </view>
  <view class="ctrl-item share">
    <button open-type="share" data-blogid="{{blogId}}" data-blog="{{blog}}" class="share-btn" hover-class="share-hover">
      <i class="iconfont icon-share icon"></i>
      <text>分享</text>
    </button>
  </view>
</view>
<x-login modalShow="{{loginShow}}" bind:loginsuccess="onLoginsuccess" bind:loginfail="onLoginfail" />
<x-bottom-modal modalShow="{{modalShow}}">
  <view slot="modal-content">
    <textarea name="content" class="comment-content" placeholder="写评论" value="{{content}}" bind:input="onInput" fixed="true"></textarea>
    <view class="send-btn" bind:tap="onSend">发表评论</view>
  </view>
</x-bottom-modal>