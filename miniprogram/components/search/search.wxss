.search-container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.search-bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.search-button {
  display: block;
  padding: 15rpx 20rpx;
  border-radius: 5rpx;
  background: #d43c33;
  color: #fff;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.search-in-bar {
  color: #999;
}
.iconfont {
  font-size: 24rpx;
}

.search-find {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}
